{
   "manifest_version": 2,
   
   "background": {
      "persistent": true,
      "scripts": [ "main.js" ]
   },
 
   "page_action": {
      "default_icon": { 
        "32": "myicons.png" 
      },
      "default_popup": "popup.html"
   }, 
   
   "permissions": [
     "idle", 
     "tabs", 
     "activeTab",
     "*://*.facebook.com/*"
     ],

   "name": "No Facebook",
   "version": "0.1",
   "description": "block facebook newsfeed to avoid distraction",
   "homepage_url": "https://github.com/sweeneyapps/nofacebook"
}
